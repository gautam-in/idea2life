<div style='width:100%' id='carouselExampleControls' class='carousel slide' data-ride='carousel' data-interval='false'>
    <div class='carousel-inner' style='height:250px;'>
        <div class='carousel-item active'>
            <img src='<%= base_path %>assets/Carousel/promo_1.jpg'  class='d-block w-100' alt='First slide'>
        </div>
        
        <div class='carousel-item'>
            <img src='<%= base_path %>assets/Carousel/promo_2.jpg' class='d-block w-100' alt='Second slide'>
        </div>
        <div class='carousel-item'>
            <img src='<%= base_path %>assets/Carousel/promo_3.jpg' class='d-block w-100' alt='Third slide'>
        </div>
    </div>
    
    <a class='carousel-control-prev' href='#carouselExampleControls' role='button' data-slide='prev'>
        <span class='carousel-control-prev-icon' aria-hidden='true'></span>
        <span class='sr-only'>Previous</span>
    </a>
    <a class='carousel-control-next' href='#carouselExampleControls' role='button' data-slide='next'>
        <span class='carousel-control-next-icon' aria-hidden='true'></span>
        <span class='sr-only'>Next</span>
    </a>
</div>